mixin sStandards(data)
	// start sStandards
	+b.SECTION.sStandards.section#sStandards.wow.animate__animated.animate__fadeIn&attributes(attributes)
		+e.container.container
			+b.section-title
				h2 Проект ОДД по 
					span стандартам
			+e.row.row
				mixin item(text)
					+e.item
						+e.icon-wrap
							+icon('check')
						p!= text
				.col-md-6
					+item('Проектируем и&nbsp;согласовываем ОДД с&nbsp;2006&nbsp;г.&nbsp;с&nbsp;одним ИНН и&nbsp;номером телефона')
				.col-md-6
					+item('Поможем с&nbsp;согласованием проекта во&nbsp;всех необходимых инстанциях')
				.col-md-6
					+item('Оказываем полную поддержку в&nbsp;процессе создания плана и&nbsp;его согласования')
				.col-md-6
					+item('Сроки разработки и&nbsp;согласования проекта от&nbsp;2-х дней с&nbsp;гарантией под ключ')
				.col-12
					+e.btn.btn-green.link-modal-js(href="#modal-call" data-order="Вызов модалки по кнопке 'Заказать ОДД по  стандартам'" data-pic="img/@2x/modal-paper-1.png" data-title="Мы перезвоним!") Заказать ОДД по  стандартам
			picture.img
				source(media="(max-width:991px)" srcset="img/sStandards-img-2.png", alt="")
				img(src="img/sStandards-img-1.png", alt="").img
			img(src="img/sStandards-bg-1.png", alt="").bg
	// end sStandards